<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" style="-fx-padding: 20;">
    <!-- Upcoming Deadline Field -->
    <VBox style="-fx-background-color: #f8f9fa; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #2196f3; -fx-border-width: 2; -fx-padding: 18;" effect="DropShadow">
        <Label text="Upcoming Deadline" style="-fx-font-size: 19px; -fx-font-weight: bold; -fx-text-fill: #2196f3;" />
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Title:" style="-fx-font-weight: bold;"/>
            <Label fx:id="deadlineTitleLabel" text="No deadlines" style="-fx-font-size: 15px;" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Due:" style="-fx-font-weight: bold;"/>
            <Label fx:id="deadlineDateLabel" text="-" style="-fx-font-size: 15px;" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Details:" style="-fx-font-weight: bold;"/>
            <Label fx:id="deadlineDetailsLabel" text="-" style="-fx-font-size: 15px;"/>
        </HBox>
    </VBox>
</VBox>