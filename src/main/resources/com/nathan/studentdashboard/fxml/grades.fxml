<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="20" alignment="TOP_CENTER" styleClass="grades-root">
    <!-- GPA and Recent Grade Overview -->
    <HBox spacing="40" alignment="CENTER" styleClass="grades-hbox">
        <Label text="GPA:" styleClass="grades-label"/>
        <Label fx:id="gpaLabel" text="-" styleClass="grades-label-bold"/>
        <Label text="Most Recent Grade:" styleClass="grades-label"/>
        <Label fx:id="recentGradeLabel" text="-" styleClass="grades-label-bold"/>
    </HBox>

    <!-- Table of All Grades -->
    <Label text="All Grades" styleClass="grades-title"/>
    <TableView fx:id="gradesTable" prefWidth="500" styleClass="grades-table">
        <columns>
            <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="200"/>
            <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date Received" prefWidth="200"/>
        </columns>
    </TableView>
</VBox>